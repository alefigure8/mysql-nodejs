<div class="container p-4">
    <div class="row">
        {{#each links}}
        <div class="col-md-3">
            <div class="card text-center card-size shadow">
                <div class="card-body">
                    <a href="{{url}}" target="_blank"><h3 class="card-title text-uppercase">{{title}}</h3></a>
                
                <p class="m-2">{{description}}</p> 
                {{!--Method timeago from helpers--}}
                <p class="text-success">{{timeago created_at}}</p> 
                <a href="links/delete/{{id}}" class="btn btn-purple text-light">Delete</a>
                <a href="links/edit/{{id}}" class="btn btn-pink text-light">Edit</a>
                </div>
            </div>
        </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>There are not links saved yer</p>
                    <a href="/links/add">Create one!</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>