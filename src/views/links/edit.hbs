<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card shadow"> 
                <div class="card-body">
                    {{#each links}}
                    <form action="/links/edit/{{id}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" placeholder="Title" value="{{title}}" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="url" name="url" class="form-control" placeholder="URL" value="{{url}}">
                        </div>
                        <div class="form-group">
                            <textarea name="description" class="form-control" rows="2" placeholder="Description">{{description}}</textarea>
                        </div>
                        <div class="form-group">
                        <button class="btn btn-success btn-block">Save</button> 
                        </div>
                    </form>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>